<!DOCTYPE html>
<html lang="en">

<head>
    <title>RB-Blogs - <%= category %></title>
    <%- include('./partials/head') %>
    <style>
        body { background-color: #f8f9fa; }
        .container { margin-top: 20px; }
        .card { box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); transition: transform 0.2s; }
        .card:hover { transform: scale(1.05); }
        .card-img-top { height: 200px; object-fit: cover; }
        .card-title { font-size: 1.25rem; font-weight: bold; }
        .card-text { flex-grow: 1; }
        .btn-primary { background-color: #007bff; border-color: #007bff; font-weight: bold; }
        .btn-primary:hover { background-color: #0056b3; border-color: #0056b3; }
        .form-control { border-radius: 5px; }
    </style>
</head>

<body>
    <%- include('./partials/navbar') %>
    <div class="container">
        <h3>Category: <%= category %></h3>
        <div class="row">
            <% blogs.forEach(blog => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="/<%= blog.CoverImage %>" class="card-img-top responsive" alt="Blog Cover Image">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <%- include('./partials/script') %>
</body>

</html>
