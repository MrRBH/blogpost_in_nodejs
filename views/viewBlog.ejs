<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="/<%= blog.CoverImage %>" width="700px" />
      <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
    
    </div>

    <div class="container mt-3">
      
      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog.id %>" method="post">
        <div class="mb-3 col-md-4">
          <input
            type="text"
            name="content"
            class="form-control"
            placeholder="Enter your comment"
          />
          <button class="btn btn-sm btn-primary mt-1" type="submit">Add</button>
        </div>
      </form>

      <% } %>
      <div class="mt-3">
        <% comments.forEach(comment => { %>
        <!-- <div>
          <img src="" width="50px" />
          <%= comment.userId %>
          <pre><%= comment.content %></pre>
        </div> -->
        <div class="card mb-4 col-md-4">
            <div class="card-body">
              <pre><%= comment.content %></pre>
  
              <div class="d-flex justify-content-between">
                <div class="d-flex flex-row align-items-center">
                  <img src="https://i.imgur.com/tPvlEdq.jpg" alt="avatar" width="25"
                    height="25" />
          
                </div>
                <div class="d-flex flex-row align-items-center">
                  <p class="small text-muted mb-0"><%= comment.createdAt.toLocaleString() %></p>
                  <i class="far fa-thumbs-up mx-2 fa-xs text-body" style="margin-top: -0.16rem;"></i>
                  <p class="small text-muted mb-0">3</p>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
